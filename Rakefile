require 'hoe'
require './lib/gutenberg/version.rb'

Hoe.spec 'gutenberg' do

  self.version = Gutenberg::VERSION

  self.summary = "gutenberg - the printing press for books (reinvented in ruby)"
  self.description = summary

  self.urls    = ['https://github.com/rubylibs/gutenberg']

  self.author  = 'Gerald Bauer'
  self.email   = 'wwwmake@googlegroups.com'

  # switch extension to .markdown for gihub formatting
  self.readme_file  = 'README.md'
  self.history_file = 'HISTORY.md'

  self.extra_deps = [
  ]

  self.licenses = ['Public Domain']

  self.spec_extras = {
    required_ruby_version: '>= 1.9.2'
  }

end
